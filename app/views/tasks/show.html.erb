<h1><%= @task.title %></h1>
<div style='background-color: silver; width: 360px; padding: 30px; margin: 10px; border-radius: 6px'>
  <%= @task.details %>
</div>
<p><%= link_to 'Edit this task', edit_task_path(@task.id) %></p>
<p><%= link_to 'Delete this task', task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %></p>
<p><input type="checkbox" <%= 'checked' if @task.completed == true %> > This task is completed</p>
